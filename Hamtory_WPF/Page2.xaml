<Page x:Class="Hamtory_WPF.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hamtory_WPF"
      xmlns:lc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="535" d:DesignWidth="900"
      Title="Page2">

    <Grid Background="#FFFCFF00">
        <Label Content="조회 기간" HorizontalAlignment="Left" Height="34" Margin="175,30,0,0" VerticalAlignment="Top" Width="82" FontSize="15"/>
            <local:DateRangePicker x:Name="DateRangePickerControl" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="586,35,0,0" RenderTransformOrigin="1.014,-3.182" Width="32" />
            <TextBlock x:Name="StartDateText" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="262,35,0,0" Width="86" Background="Red" FontSize="15" />
        <TextBlock x:Name="EndDateText" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="443,35,0,0" Width="86" Background="Red" FontSize="15" />
        <Button x:Name="RawDataButton" Content="Raw Data" HorizontalAlignment="Left" Height="34" Margin="727,29,0,0" VerticalAlignment="Top" Width="82" Click="RawDataButton_Click"/>


        <!-- 운영 데이터 -->
        <Grid HorizontalAlignment="Left" Height="402" Margin="26,103,0,0" VerticalAlignment="Top" Width="560" Background="#FF00FFDA">
            <local:OpChart x:Name="opChart" HorizontalAlignment="Center" VerticalAlignment="Top" Width="560" Height="322" Margin="0,80,0,0"/>
        </Grid>


        <Grid HorizontalAlignment="Left" Height="201" Margin="609,103,0,0" VerticalAlignment="Top" Width="251" Background="#FF4E4E4E"/>
        <Grid HorizontalAlignment="Left" Height="183" Margin="609,322,0,0" VerticalAlignment="Top" Width="251" Background="#FFD700FF"/>
        <TextBox  x:Name="txtStartTime" HorizontalAlignment="Left" Height="28" Margin="353,31,0,0" TextWrapping="Wrap" Text="00:00" VerticalAlignment="Top" Width="49" FontSize="15"/>
        <TextBox  x:Name="txtEndTime" HorizontalAlignment="Left" Height="30" Margin="534,31,0,0" TextWrapping="Wrap" Text="00:00" VerticalAlignment="Top" Width="47" FontSize="15"/>
    </Grid>
</Page>