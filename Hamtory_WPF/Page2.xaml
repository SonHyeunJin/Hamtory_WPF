<Page x:Class="Hamtory_WPF.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      Title="Page2" Height="800" Width="1000">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <Label Content="Start Date:" VerticalAlignment="Center" Margin="5"/>
                <DatePicker x:Name="datePickerStart" Width="120" Height="25" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="txtStartTime" Width="60" Height="25" VerticalAlignment="Center" Margin="5" Text="00:00"/>
                <Label Content="End Date:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                <DatePicker x:Name="datePickerEnd" Width="120" Height="25" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="txtEndTime" Width="60" Height="25" VerticalAlignment="Center" Margin="5" Text="23:59"/>
                <Button x:Name="BtnFilter" Content="Filter" Width="80" Height="25" VerticalAlignment="Center" Margin="5" Click="BtnFilter_Click"/>
                <Button x:Name="BtnSave" Content="Save" Width="80" Height="25" VerticalAlignment="Center" Margin="5" Click="BtnSave_Click"/>
            </StackPanel>

            <DataGrid x:Name="dataGrid" HorizontalAlignment="Center" Margin="10" AutoGenerateColumns="False" Width="960" Height="288">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding STD_DT}" Width="*"/>
                    <DataGridTextColumn Header="Num" Binding="{Binding NUM}" Width="*"/>
                    <DataGridTextColumn Header="Melt Temp" Binding="{Binding MELT_TEMP}" Width="*"/>
                    <DataGridTextColumn Header="Motor Speed" Binding="{Binding MOTORSPEED}" Width="*"/>
                    <DataGridTextColumn Header="Melt Weight" Binding="{Binding MELT_WEIGHT}" Width="*"/>
                    <DataGridTextColumn Header="INSP" Binding="{Binding INSP}" Width="*"/>
                    <DataGridTextColumn Header="TAG" Binding="{Binding TAG}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <Button x:Name="BtnShowStatistics" Content="Show Statistics" Width="150" Height="35" Margin="10" Click="BtnShowStatistics_Click"/>
                <Button x:Name="BtnShowNGDistribution" Content="Show NG Distribution" Width="150" Height="35" Margin="10" Click="BtnShowNGDistribution_Click"/>
                <Button x:Name="BtnShowLineChart" Content="Show Line Chart" Width="150" Height="35" Margin="10" Click="BtnShowLineChart_Click"/>
            </StackPanel>
        </StackPanel>

        <!--<StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <TextBox x:Name="txtInterval" Width="120" Margin="5" Text=""/>
            <Button Content="Update Chart" Width="120" Margin="5" Click="BtnUpdateChart_Click"/>
        </StackPanel>-->
    </Grid>
</Page>
