<Page x:Class="Hamtory_WPF.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hamtory_WPF"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="535" d:DesignWidth="900"
      Title="Page1">

    <Grid>
        <Grid>

            <Grid HorizontalAlignment="Left" Height="240"  Margin="451,22,0,0" VerticalAlignment="Top" Width="200">
                <lvc:Gauge  Margin="0,60,0,0"
                   From="0" To="100" Value="50"
                   LabelsVisibility="Collapsed" Foreground="White">
                    <lvc:Gauge.GaugeActiveFill>
                        <LinearGradientBrush EndPoint="0,0" StartPoint="1,0" SpreadMethod="Pad">
                            <GradientStop Color="#FFFF1515" Offset="0"/>
                            <GradientStop Color="#FFFFF000" Offset="1"/>
                        </LinearGradientBrush>
                    </lvc:Gauge.GaugeActiveFill>
                </lvc:Gauge>

            </Grid>
            <Grid HorizontalAlignment="Left" Height="240" Margin="665,20,0,0" VerticalAlignment="Top" Width="225" Background="#FFFFD400" Opacity="0.5"></Grid>
            <Grid HorizontalAlignment="Left" Height="240" Margin="435,268,0,0" VerticalAlignment="Top" Width="225" Background="#FF00FF3D" Opacity="0.5"></Grid>
            <Grid HorizontalAlignment="Left" Height="240" Margin="665,268,0,0" VerticalAlignment="Top" Width="225" Background="#FF00F6FF" Opacity="0.5"></Grid>
            <Grid HorizontalAlignment="Left" Height="240" Margin="10,268,0,0" VerticalAlignment="Top" Width="420" Background="#FF989898" Opacity="0.5"></Grid>
            <Grid HorizontalAlignment="Left" Height="240" Margin="10,28,0,0" VerticalAlignment="Top" Width="420" Background="#FFD9D9D9" Opacity="0.5"></Grid>

        </Grid>

    </Grid>
</Page>
